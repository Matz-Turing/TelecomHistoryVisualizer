<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>

<ScrollPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.interactivetelecomhistory.HelloController">
    <HBox spacing="10" alignment="center" xmlns="http://javafx.com/javafx/8.0.171"
          prefWidth="800" prefHeight="600" style="-fx-background-color: white;">
        <!-- Todos os botões ficam centralizados horizontalmente dentro do HBox -->
        <Button text="1837 - Invenção do Telégrafo" onMouseClicked="#handleTimelineClick" fx:id="button1"/>
        <Button text="1876 - Invenção do Telefone" onMouseClicked="#handleTimelineClick" fx:id="button2"/>
        <Button text="1895 - Primeira Transmissão de Rádio" onMouseClicked="#handleTimelineClick" fx:id="button3"/>
        <Button text="1927 - Primeira Ligação Telefônica Transatlântica" onMouseClicked="#handleTimelineClick" fx:id="button4"/>
        <Button text="1962 - Lançamento do Satélite Telstar 1" onMouseClicked="#handleTimelineClick" fx:id="button5"/>
        <Button text="1983 - Introdução do Telefone Celular" onMouseClicked="#handleTimelineClick" fx:id="button6"/>
        <Button text="1989 - Criação da World Wide Web (WWW)" onMouseClicked="#handleTimelineClick" fx:id="button7"/>
        <Button text="1991 - Chegada das Redes 2G" onMouseClicked="#handleTimelineClick" fx:id="button8"/>
        <Button text="2007 - Lançamento do iPhone" onMouseClicked="#handleTimelineClick" fx:id="button9"/>
        <Button text="2019 - Implementação da Rede 5G" onMouseClicked="#handleTimelineClick" fx:id="button10"/>
    </HBox>
</ScrollPane>
